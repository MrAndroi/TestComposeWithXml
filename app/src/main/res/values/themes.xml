<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TestComposeWithXml" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorSurface">@color/white</item>
        <item name="colorPrimary">#FE724C</item>
        <item name="colorPrimaryVariant">#FE724C</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#FE724C</item>
        <item name="colorSecondaryVariant">#FE724C</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <item name="errorTextStyle">@style/Theme.TestComposeWithXml.ErrorTextStyle</item>

        <!-- Customize your theme here. -->
    </style>
    

    <style name="primaryButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">100dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="Theme.TestComposeWithXml.ErrorTextStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/red</item>
    </style>
    
</resources>